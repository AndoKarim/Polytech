package lab4;

public enum Enseigne {
    TREFLE("trèfle"), CARREAU("carreau"), COEUR("coeur"), PIQUE("pique");

    private String texte;

    Enseigne(String val) {
        texte = val;
    }

    public String getTexte() {
        return texte;
    }

    public static Enseigne getEnseigne(String txt) {
        if (txt != null) {
            for (Enseigne ens : Enseigne.values()) {
                if (txt.toLowerCase().equals(ens.getTexte()))
                    return ens;
            }
        }
        return null;

    }

}
