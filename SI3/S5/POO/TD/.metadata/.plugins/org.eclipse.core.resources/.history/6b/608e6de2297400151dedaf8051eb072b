package lab4;

public class Joueur {
    Jeu paquet;
    int nombreDePoints;
    
    Joueur(Jeu cartes){
        paquet = cartes;
        nombreDePoints = 0;
    }
    
    public void gagner(){
        nombreDePoints +=1;
    }
    
    public Carte tirer(){
       return paquet.tirer();
    }

}
